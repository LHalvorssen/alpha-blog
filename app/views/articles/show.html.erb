
<h2 align= "center"> Title: <%= @article.title %> </h2>

<div class="well col-xs-8 col-xs-offset-2">
    <h4 align= "center" class= "description"> <strong> Description: </strong> </h4>
    <hr>
        <%= simple_format(@article.description) %>

        <div class= "article-meta-details">
            <small>Created by: <%= @article.user.username if @article.user%>,
            <%= time_ago_in_words(@article.created_at) %> ago,
            last updated: <%= time_ago_in_words(@article.updated_at) %> ago </small>
        </div>

    <div class= "article-actions">     
        <%= link_to 'Edit this article', edit_article_path(@article), class: "btn btn-xs btn-primary" %> 
        <%= link_to "Delete this article", article_path(@article), method: :delete, data: {confirm: "Are you sure you would like to delete \" #{@article.title}\" "}, class: "btn btn-xs btn-danger" %> 
        <%= link_to 'Back to articles listing', articles_path(@article), class: "btn btn-xs btn-success" %>
    </div>
</div>
