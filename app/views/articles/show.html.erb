

<div class="well col-xs-8 col-xs-offset-2 articleshow">
    <div class= "col rightcol" align= "right">
        <h2><%= @article.title %> </h2>
        <hr>
        <%= simple_format(@article.description) %>
        
        <div class="row" align="left">
            <div class= "article-actions articleshow">   
                <% if logged_in? && current_user == @article.user %>
                    <%= link_to 'Edit this article', edit_article_path(@article), class: "btn btn-xs btn-primary" %> 
                    <%= link_to "Delete this article", article_path(@article), method: :delete, data: {confirm: "Are you sure you would like to delete \" #{@article.title}\" "}, class: "btn btn-xs btn-danger" %> 
                <% end %>
                <%= link_to 'Back to articles listing', articles_path(@article), class: "btn btn-xs btn-success" %>
            </div>
        </div>
    </div>

    <div class= "col leftcol">
        <ul class="listing"> 
            <div class="row">
                <li>Created by:</li>
                <li><%= link_to gravatar_for(@article.user), user_path(@article.user) %></li>
                <li class="article-title">
                    <%= link_to @article.user.username, user_path(@article.user) %>
                </li>
                <li><small> <%= pluralize(@article.user.articles.count, "article") if @article.user.articles %></small> </li>
            </div>
        </ul>
    </div>

    

    
</div>

    
 
 